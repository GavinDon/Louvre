<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ada_bottom_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/grey"
        android:textSize="18sp"
        tools:text="@string/app_name"
        />

    <TextView
        android:id="@+id/ada_bottom_dialog_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/ada_bottom_dialog_name"
        tools:text="18602923659"
        />

    <TextView
        android:id="@+id/ada_bottom_dialog_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@color/semi"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/ada_bottom_dialog_name"
        app:layout_constraintTop_toBottomOf="@id/ada_bottom_dialog_name"
        tools:text="18602923659"
        />

</android.support.constraint.ConstraintLayout>