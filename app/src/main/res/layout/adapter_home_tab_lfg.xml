<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/ada_home_tab_lfg_store_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="2dp"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/ada_home_tab_lfg_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/ada_home_tab_lfg_store_icon"
            app:layout_constraintTop_toTopOf="@id/ada_home_tab_lfg_store_icon"
            tools:text="@string/app_name"
            />

        <TextView
            android:id="@+id/ada_home_tab_lfg_hour_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/light"
            app:layout_constraintBottom_toBottomOf="@id/ada_home_tab_lfg_store_icon"
            app:layout_constraintLeft_toRightOf="@id/ada_home_tab_lfg_store_icon"
            tools:text="12小时前"
            />

        <TextView
            android:id="@+id/ada_home_tab_lfg_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/semi"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@id/ada_home_tab_lfg_store_icon"
            tools:text="店名叫罗宾汉酌酒店的顾客们。The customers of the public house called the Robin hood."
            />

        <ImageView
            android:id="@+id/ada_home_tab_lfg_img_playbill"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/ada_home_tab_lfg_statement"
            tools:src="@mipmap/start_up"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>