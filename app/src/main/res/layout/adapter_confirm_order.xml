<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/ada_confirm_order_iv"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/ada_confirm_order_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/semi"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ada_confirm_order_iv"
        app:layout_constraintTop_toTopOf="@id/ada_confirm_order_iv"
        tools:text="@string/app_name"
        />

    <TextView
        android:id="@+id/ada_confirm_order_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/ada_confirm_order_tv_name"
        app:layout_constraintTop_toBottomOf="@id/ada_confirm_order_tv_name"
        tools:text="@string/app_name"

        />


    <TextView
        android:id="@+id/ada_confirm_order_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/money"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/price_red"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/ada_confirm_order_iv"
        app:layout_constraintLeft_toLeftOf="@id/ada_confirm_order_tv_name"
        tools:text="1299.00"
        />

    <TextView
        android:id="@+id/ada_confirm_order_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="26dp"
        android:gravity="center_vertical"
        android:textColor="@color/semi"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="x3"
        />


</android.support.constraint.ConstraintLayout>