<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stxx.louvre.ui.activity.DeliveryAddressActivity">

    <include
        android:id="@+id/address_include"
        layout="@layout/common_activity_title"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/address_tv_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_include"
        app:layout_constraintVertical_bias="0.0"

        />

    <TextView
        android:id="@+id/address_tv_new"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="+   新建地址"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="true"
        android:layout_marginBottom="@dimen/dp_10"

        />


</android.support.constraint.ConstraintLayout>
