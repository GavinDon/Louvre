<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <EditText
        android:id="@+id/et_viewCountdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_et_bg"
        android:hint="输入手机号码"
        android:maxLength="11"
        android:inputType="phone"
        />

    <ImageView
        android:id="@+id/iv_viewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/et_viewCountdown"
        app:layout_constraintRight_toLeftOf="@id/btn_view"
        app:layout_constraintTop_toTopOf="@id/et_viewCountdown"
        />

    <com.stxx.louvre.widgets.SubmitButton
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="获取验证码"
        android:textColor="@android:color/white"
        app:btnAngle="4dp"
        app:btnNormalColor="@color/price_red"
        app:btnPressColor="@color/price_red_press"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_viewCountdown"
        app:layout_constraintTop_toTopOf="@id/et_viewCountdown"
        />

</android.support.constraint.ConstraintLayout>